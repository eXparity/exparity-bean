<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{dd-MM-yy HH:mm:ss.SSS} %-5level %msg [%logger{0}] [%thread]%n</pattern>
		</encoder>
	</appender>
	<logger name="org.exparity.bean" level="DEBUG"/>
	<root level="INFO">
		<appender-ref ref="STDOUT"/>
	</root>
</configuration>